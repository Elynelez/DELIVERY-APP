{
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "version": 2,
    "builds": [
        {
            "src": "src/**/*.js",
            "use": "@vercel/node",
            "config": {
                "commands": {
                    "beforeBuild": [
                        "npm ci"
                    ]
                }
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}